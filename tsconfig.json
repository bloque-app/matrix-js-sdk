{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["DOM"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmit": true,
    "declaration": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*.ts",
    "./spec/**/*.ts",
  ]
}
